extends ../aalayout/layout

block content
	.container.mt-3
		.row
			.col-12.text-right
				a.btn.btn-warning(href="/adUserAdd") +
		.row.mt-3
			.col-12
				table.table.table-hover.table-bordered
					thead
						tr
							th 账户
							th 名字
							th 角色
							th 公司
					tbody
						each User in Users
							-a;
							tr(class="User-id-"+User._id)
								td: a(href="/adUser/"+User._id) #{User.code}
								td #{User.nome}
								td
									- let role = '';
									each roleUser in Conf.roleUser
										- role = '';
										if roleUser.num == User.role
											- role = roleUser.val;
											- break;
									span #{role}
								td
									if User.Firm
										-Firm = User.Firm;
										span #{Firm.code}
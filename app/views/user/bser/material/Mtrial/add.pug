extends ../../../aalayout/layout

block content
	.container
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/bser") Home
				li.breadcrumb-item: a(href="/bsMtrials") 印花列表
				li.breadcrumb-item.active(aria-current="page") #{title}
		hr
		form.mt-5#objForm(method="post", action="/bsMtrialNew", enctype="multipart/form-data")
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="MtFirmIpt") MtFirm
				.col-9.col-sm-6
					select#MtFirmIpt.form-control(name="obj[MtFirm]", data-style="btn-info")
						each MtFirm in MtFirms
							- a;
							option(value=MtFirm._id) #{MtFirm.code}
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="isPternIpt") 是否需要印花
				.col-9.col-sm-6
					select#isPternIpt.form-control(name="obj[isPtern]", data-style="btn-info")
						each isPtern in Conf.isPtern
							-a;
							option(value=isPtern.num) #{isPtern.val}
			.form-group.row
				label.col-3.col-sm-2.col-form-label 分类
				.col-3.col-sm-2
					input#ipt-MtCateg-1.iptMtCateg.form-control(type="hidden", name="obj[MtCategFir]" autocomplete="off")
					input#req-MtCateg-1.reqMtCateg.form-control(type="text", autocomplete="off")
				.col-3.col-sm-2
					input#ipt-MtCateg-2.iptMtCateg.form-control(type="hidden", name="obj[MtCategSec]" autocomplete="off")
					input#req-MtCateg-2.reqMtCateg.form-control(type="text", autocomplete="off")
				.col-3.col-sm-2
					input#ipt-MtCateg-3.iptMtCateg.form-control(type="hidden", name="obj[MtCategThd]" autocomplete="off")
					input#req-MtCateg-3.reqMtCateg.form-control(type="text", autocomplete="off")
				.offset-3.offset-sm-2.col-9.col-sm-6.col-form-label#MtCateg-box
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="codeIpt") code
				.col-9.col-sm-6
					input#codeIpt.form-control(type="text", name="obj[code]")
				.offset-3.col-9.col-form-label#codeDanger.text-danger(style="display:none") 请输入正确的编号
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="costIpt") cost
				.col-9.col-sm-6
					input#costIpt.form-control(type="text", name="obj[cost]")
				.offset-3.col-9.col-form-label#costDanger.text-danger(style="display:none") 请输入正确的成本格式
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="sortIpt") sort
				.col-9.col-sm-6
					input#sortIpt.form-control(type="number", name="obj[sort]", value=1)
			hr
			.form-group.row
				.offset-sm-6.col-sm-2
					input.btn.btn-success.btn-block(type="submit" value="添加")
	script(src="/js/bser/material/Mtrial/edit.js")
extends ../../../aalayout/layout

block content
	.container
		if info
			-a;
			.border.p-2.my-3.rounded.text-center.text-warning
				h3 #{info}
				.text-right
					a.btn.btn-default(href="/bsPtFirms") 确认
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/bser") Home
				li.breadcrumb-item.active(aria-current="page") #{title}
		.row.my-3
			.col-12.text-right
				button.btn.btn-danger.jsDel-btnClick.mr-5(type="button") -
				a.btn.btn-warning(href="/bsPtFirmAdd") +

		- getUrl = "/bsPtFirmUpdAjax";
		.row
			each PtFirm in PtFirms
				- object = PtFirm;
				.col-6.col-lg-3.mt-4
					.card.text-center(style="width: 100%;")
						.card-body
							.code
								- field="code", value=PtFirm.code, subid="code";
								include ../../../../aaPlugin/ajaxInputUpd
							.sort.mt-3
								- field="sort", value=PtFirm.sort, subid="sort";
								include ../../../../aaPlugin/ajaxInputUpd
							.text-right.mt-3.jsDel-objElem(style="display:none")
								a.text-danger(href="/bsPtFirmDel/"+PtFirm._id) [删除]
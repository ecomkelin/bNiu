extends ../../../aalayout/layout

block content
	.container
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/bser") Home
				li.breadcrumb-item: a(href="/bsPterns") 印花列表
				li.breadcrumb-item.active(aria-current="page") #{title}
		hr
		form.mt-5#objForm(method="post", action="/bsPternNew", enctype="multipart/form-data")
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="PtFirmIpt") PtFirm
				.col-9.col-sm-6
					select#PtFirmIpt.form-control(name="obj[PtFirm]", data-style="btn-info")
						each PtFirm in PtFirms
							- a;
							option(value=PtFirm._id) #{PtFirm.code}
			.form-group.row
				label.col-3.col-sm-2.col-form-label 分类
				.col-3.col-sm-2
					input#ipt-PtCateg-1.iptPtCateg.form-control(type="hidden", name="obj[PtCategFir]" autocomplete="off")
					input#req-PtCateg-1.reqPtCateg.form-control(type="text", autocomplete="off")
				.col-3.col-sm-2
					input#ipt-PtCateg-2.iptPtCateg.form-control(type="hidden", name="obj[PtCategSec]" autocomplete="off")
					input#req-PtCateg-2.reqPtCateg.form-control(type="text", autocomplete="off")
				.col-3.col-sm-2
					input#ipt-PtCateg-3.iptPtCateg.form-control(type="hidden", name="obj[PtCategThd]" autocomplete="off")
					input#req-PtCateg-3.reqPtCateg.form-control(type="text", autocomplete="off")
				.offset-3.offset-sm-2.col-9.col-sm-6.col-form-label#PtCateg-box
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="codeIpt") code
				.col-9.col-sm-6
					input#codeIpt.form-control(type="text", name="obj[code]")
				.offset-3.col-9.col-form-label#codeDanger.text-danger(style="display:none") 请输入正确的编号
			.form-group.row
				label.col-3.col-sm-2.col-form-label(for="sortIpt") sort
				.col-9.col-sm-6
					input#sortIpt.form-control(type="number", name="obj[sort]", value=1)
			hr
			.form-group.row
				.offset-sm-6.col-sm-2
					input.btn.btn-success.btn-block(type="submit" value="添加")
	script(src="/js/bser/pattern/Ptern/edit.js")